/* Общий стиль для светлой темы */
QMainWindow {
    background-color: #dee2e6;  /* Фон белый */
}

/* Кнопки */
QPushButton {
    background-color: #6495ED; /* Фон кнопок */
    color: white;              /* Черный текст */
    border: 2px solid transparent;
    border-radius: 6px;
}

/* При наведении на кнопку */
QPushButton:hover {
    background-color: #89AEF1; /* Цвет кнопки при наведении */
}

/* При нажатии на кнопку */
QPushButton:pressed {
    background-color: #B3CBF5;    /* Цвет кнопки при нажатии */
}

/* Поля ввода (QLineEdit, QTextEdit) */
QLineEdit, QTextEdit {
    background-color: #BDD7F1;   /* Фон полей ввода */
    color: black;              /* Черный текст */
    border: 2px solid transparent;
    border-radius: 6px;
}

/* При наведении на поле ввода */
QLineEdit:hover, QTextEdit:hover {
    background-color: #B6D0FB; /* Цвет поля ввода при наведении */
}

/* Метки */
QLabel {
    color: black;              /* Черный текст для QLabel */
}

/* Комбобоксы */
QComboBox {
    background-color: white;   /* Фон комбобокса */
    color: black;              /* Черный текст */
    border: 2px solid transparent;
    border-radius: 6px;
}

/* Чекбоксы */
QCheckBox {
    color: black; 
}

/* Радиокнопки */
QRadioButton {
    color: black;              /* Черный текст для QRadioButton */
}

/* Списки */
QListWidget {
    background-color: white;   /* Фон списка */
    color: black;              /* Черный текст */
    border: 2px solid transparent;
}

/* Списки при наведении */
QListWidget:item:hover {
    background-color: #f0f0f0; /* Цвет элемента при наведении */
}
